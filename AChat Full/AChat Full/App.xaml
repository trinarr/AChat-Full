<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conv="clr-namespace:AChatFull.Utils;assembly=AChatFull"
             x:Class="AChatFull.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="TextColor">#111827</Color>
            <Color x:Key="MutedTextColor">#6F7683</Color>
        </ResourceDictionary>
        <ResourceDictionary>
            <conv:IncomingBgConverter x:Key="IncomingBgConverter" />
            <conv:IncomingTextColorConverter x:Key="IncomingTextColorConverter" />
            <conv:BoolToHorzOptionsConverter x:Key="BoolToHorzOptionsConverter" />
            <conv:EqualConverter x:Key="EqualConverter" />
            <conv:InverseBoolConverter x:Key="InverseBoolConverter" />
            <conv:FileSizeConverter x:Key="FileSizeConverter" />
            <conv:BoolToTextConverter x:Key="BoolToTextConverter" />
            <conv:FirstLetterConverter x:Key="FirstLetterConverter" />
            <conv:BoolToGridColumnConverter x:Key="BoolToGridColumnConverter" />
            <conv:PresenceToColorConverter x:Key="PresenceToColorConverter" />
            <conv:PresenceToTextConverter x:Key="PresenceToTextConverter" Compact="True"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>