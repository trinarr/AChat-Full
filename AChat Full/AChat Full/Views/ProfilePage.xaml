<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AChatFull.Views.ProfilePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:AChatFull.ViewModels"
    Title="You">

    <ContentPage.Resources>
        <Style x:Key="RowStyle" TargetType="Grid">
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="ColumnDefinitions">
                <Setter.Value>
                    <ColumnDefinitionCollection>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </ColumnDefinitionCollection>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RowIcon" TargetType="Image">
            <Setter Property="HeightRequest" Value="22"/>
            <Setter Property="WidthRequest" Value="22"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
        </Style>
        <Style x:Key="RowTitle" TargetType="Label">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextColor" Value="{StaticResource TextColor}"/>
        </Style>
        <Style x:Key="RowDivider" TargetType="BoxView">
            <Setter Property="Color" Value="#1A000000"/>
            <Setter Property="HeightRequest" Value="1"/>
            <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout Spacing="16" Padding="16,12,16,24">

            <!-- Header: аватар + имя + статус -->
            <Grid ColumnSpacing="12" RowSpacing="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="72"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Аватар + точка статуса -->
                <AbsoluteLayout HeightRequest="72" WidthRequest="72">

                    <!-- Круглая подложка -->
                    <Frame
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            HasShadow="False"
            Padding="0"
            CornerRadius="36"
            BackgroundColor="#E6E9EE">

                        <!-- Либо фото, либо инициалы -->
                        <Grid>

                            <!-- Фото: видно только если HasAvatar -->
                            <Image
                    Aspect="AspectFill"
                    Source="{Binding AvatarImage}"
                    IsVisible="{Binding HasAvatar}" />

                            <!-- Инициалы: видно когда фото нет -->
                            <Label
                    Text="{Binding Initials}"
                    IsVisible="{Binding HasAvatar, Converter={StaticResource InverseBoolConverter}}"
                    FontSize="24"
                    TextColor="#606874"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                        </Grid>
                    </Frame>

                    <!-- Индикатор статуса: правый-нижний угол, чуть внутрь -->
                    <Frame
            AbsoluteLayout.LayoutBounds="1,1,14,14"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            HasShadow="False"
            Padding="0"
            CornerRadius="7"
            BackgroundColor="White"
            TranslationX="-3"
            TranslationY="-3">
                        <Frame
                HasShadow="False"
                Padding="0"
                CornerRadius="5.5"
                HeightRequest="11"
                WidthRequest="11"
                BackgroundColor="{Binding PresenceColor}"/>
                    </Frame>
                </AbsoluteLayout>

                <!-- Имя + подпись статуса -->
                <StackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                    <Label Text="{Binding DisplayName}" FontAttributes="Bold" FontSize="18" TextColor="#000"/>
                    <Label Text="{Binding PresenceDisplay}" TextColor="#6F7683" FontSize="14"/>
                </StackLayout>
            </Grid>

            <!-- БЛОК: быстрые действия -->
            <Frame HasShadow="False" CornerRadius="16" BackgroundColor="White" Padding="0">
                <StackLayout Spacing="0">

                    <!-- Update your status (открывает лист выбора статуса / расширенный статус) -->
                    <Grid Style="{StaticResource RowStyle}">
                        <Image Style="{StaticResource RowIcon}" Source="ic_smile.png"/>
                        <Label Grid.Column="1" Style="{StaticResource RowTitle}" Text="Update your status"/>
                        <Image Grid.Column="2" Source="ic_chevron_right.png" HeightRequest="20" WidthRequest="20" />
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ChangeStatusCommand}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                    <BoxView Style="{StaticResource RowDivider}" />

                    <!-- Set yourself as away -->
                    <Grid Style="{StaticResource RowStyle}">
                        <Image Style="{StaticResource RowIcon}" Source="ic_moon.png"/>
                        <Label Grid.Column="1" Style="{StaticResource RowTitle}" Text="Set yourself as away"/>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SetAwayCommand}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- БЛОК: переходы -->
            <Frame HasShadow="False" CornerRadius="16" BackgroundColor="White" Padding="0">
                <StackLayout Spacing="0">
                    <!-- Edit profile -->
                    <Grid Style="{StaticResource RowStyle}">
                        <Image Style="{StaticResource RowIcon}" Source="ic_edit.png"/>
                        <Label Grid.Column="1" Style="{StaticResource RowTitle}" Text="Edit profile"/>
                        <Image Grid.Column="2" Source="ic_chevron_right.png" HeightRequest="20" WidthRequest="20" />
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding EditProfileCommand}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                    <BoxView Style="{StaticResource RowDivider}" />

                    <!-- Preferences / Settings -->
                    <Grid Style="{StaticResource RowStyle}">
                        <Image Style="{StaticResource RowIcon}" Source="ic_settings.png"/>
                        <Label Grid.Column="1" Style="{StaticResource RowTitle}" Text="Preferences"/>
                        <Image Grid.Column="2" Source="ic_chevron_right.png" HeightRequest="20" WidthRequest="20" />
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding OpenSettingsCommand}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>
</ContentPage>