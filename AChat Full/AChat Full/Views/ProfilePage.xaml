<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AChatFull.Views.ProfilePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ContentPage.Resources>
        <Style x:Key="RowStyle" TargetType="Grid">
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="ColumnDefinitions">
                <Setter.Value>
                    <ColumnDefinitionCollection>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </ColumnDefinitionCollection>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RowIcon" TargetType="Image">
            <Setter Property="HeightRequest" Value="25"/>
            <Setter Property="WidthRequest" Value="25"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
        </Style>
        <Style x:Key="RowTitle" TargetType="Label">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="TextColor" Value="{StaticResource TextColor}"/>
        </Style>
        <Style x:Key="RowDivider" TargetType="BoxView">
            <Setter Property="Color" Value="#1A000000"/>
            <Setter Property="HeightRequest" Value="1"/>
            <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
        </Style>
    </ContentPage.Resources>

    <NavigationPage.TitleView>
        <Grid Padding="8" ColumnDefinitions="*" RowDefinitions="Auto">
            <Label Grid.Column="0"
             Text="You"
             TextColor="#fff"
             FontAttributes="Bold"
             FontSize="18"
             VerticalTextAlignment="Center"
             HorizontalTextAlignment="Center"/>
        </Grid>
    </NavigationPage.TitleView>

    <ScrollView>
        <StackLayout Spacing="16" Padding="16,12,16,24">

            <!-- Header: аватар + имя + статус -->
            <Grid ColumnSpacing="12" RowSpacing="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="72"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Аватар + точка статуса -->
                <AbsoluteLayout HeightRequest="72" WidthRequest="72">

                    <!-- Круглая подложка -->
                    <Frame
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            HasShadow="False"
            Padding="0"
            CornerRadius="36"
            BackgroundColor="#E6E9EE">

                        <!-- Либо фото, либо инициалы -->
                        <Grid>

                            <!-- Фото: видно только если HasAvatar -->
                            <Image
                    Aspect="AspectFill"
                    Source="{Binding AvatarImage}"
                    IsVisible="{Binding HasAvatar}" />

                            <!-- Инициалы: видно когда фото нет -->
                            <Label
                    Text="{Binding Initials}"
                    IsVisible="{Binding HasAvatar, Converter={StaticResource InverseBoolConverter}}"
                    FontSize="24"
                    TextColor="#606874"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                        </Grid>
                    </Frame>

                    <!-- Индикатор статуса с белой обводкой (правый-нижний угол) -->
                    <Grid
    AbsoluteLayout.LayoutBounds="1,1,18,18"
    AbsoluteLayout.LayoutFlags="PositionProportional">
                        <!-- Белое кольцо -->
                        <Frame HasShadow="False"
           Padding="0"
           HeightRequest="18"
           WidthRequest="18"
           CornerRadius="9"
           BackgroundColor="White"/>
                        <!-- Цветная точка -->
                        <Frame HasShadow="False"
           Padding="0"
           HeightRequest="14"
           WidthRequest="14"
           CornerRadius="7"
           BackgroundColor="{Binding PresenceColor}"
           HorizontalOptions="Center"
           VerticalOptions="Center"/>
                    </Grid>
                </AbsoluteLayout>

                <!-- Имя + подпись статуса -->
                <StackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                    <Label Text="{Binding DisplayName}" FontAttributes="Bold" FontSize="18" TextColor="#000"/>
                    <Label Text="{Binding PresenceDisplay}" TextColor="#6F7683" FontSize="14"/>
                </StackLayout>
            </Grid>

            <!-- БЛОК: быстрые действия -->
            <Frame HasShadow="False" CornerRadius="16" BackgroundColor="White" Padding="0">
                <StackLayout Spacing="0">
                    <Grid Style="{StaticResource RowStyle}">
                        <Image Grid.Column="0" Style="{StaticResource RowIcon}" Source="status.png" 
                               IsVisible="{Binding HasCustomStatus, Converter={StaticResource InverseBoolConverter}}"/>
                        <Label Grid.Column="0" Style="{StaticResource RowTitle}" 
                               FontSize="25"
                               Padding="0,0,5,0"
                               Text="{Binding CustomStatusEmoji}"/>
                        <Label Grid.Column="1" Style="{StaticResource RowTitle}" 
                               LineBreakMode="TailTruncation"
                               Text="{Binding CustomStatusText}"/>
                        <Label Grid.Column="1" Style="{StaticResource RowTitle}" 
                               Text="Update your status" 
                               IsVisible="{Binding HasCustomStatus, Converter={StaticResource InverseBoolConverter}}"/>
                        <Frame Grid.Column="2"
                           WidthRequest="25" HeightRequest="25"
                           Padding="0"
                           BackgroundColor="#FFFFFF"
                           CornerRadius="14"
                           HasShadow="False"
                           IsVisible="{Binding HasCustomStatus}">   
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ClearCustomStatusCommand}" />
                            </Frame.GestureRecognizers>

                            <Label Text="✕"
                               FontSize="14"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               AutomationProperties.IsInAccessibleTree="True"
                               AutomationProperties.Name="Clear status"/>
                        </Frame>

                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCustomStatusTapped"/>
                        </Grid.GestureRecognizers>
                    </Grid>

                    <!-- Update your status (открывает лист выбора статуса / расширенный статус) -->
                    <Grid Style="{StaticResource RowStyle}">
                        <Image Grid.Column="0" WidthRequest="25" HeightRequest="25"
                           Style="{StaticResource RowIcon}"
                           Source="{Binding Presence, Converter={StaticResource PresenceToImageConverter}}" />
                        <Label Grid.Column="1" Style="{StaticResource RowTitle}" Text="{Binding PresenceDisplay}"/>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ChangeStatusCommand}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- БЛОК: переходы -->
            <Frame HasShadow="False" CornerRadius="16" BackgroundColor="White" Padding="0">
                <StackLayout Spacing="0">
                    <Grid Style="{StaticResource RowStyle}">
                        <Image Grid.Column="0" 
                               Style="{StaticResource RowIcon}" Source="account.png"/>
                        <Label Grid.Column="1" Style="{StaticResource RowTitle}" Text="Edit profile"/>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding EditProfileCommand}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                    <Grid Style="{StaticResource RowStyle}">
                        <Image Style="{StaticResource RowIcon}" Source="settings.png"/>
                        <Label Grid.Column="1" Style="{StaticResource RowTitle}" Text="Advanced"/>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding OpenSettingsCommand}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>
</ContentPage>