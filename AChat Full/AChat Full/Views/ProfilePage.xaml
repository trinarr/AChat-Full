<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AChatFull.Views.ProfilePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:AChatFull.ViewModels"
    Title="You">

    <ContentPage.Resources>
        <Style x:Key="RowStyle" TargetType="Grid">
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="ColumnDefinitions">
                <Setter.Value>
                    <ColumnDefinitionCollection>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </ColumnDefinitionCollection>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RowIcon" TargetType="Image">
            <Setter Property="HeightRequest" Value="22"/>
            <Setter Property="WidthRequest" Value="22"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
        </Style>
        <Style x:Key="RowTitle" TargetType="Label">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextColor" Value="{StaticResource TextColor}"/>
        </Style>
        <Style x:Key="RowDivider" TargetType="BoxView">
            <Setter Property="Color" Value="#1A000000"/>
            <Setter Property="HeightRequest" Value="1"/>
            <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout Spacing="16" Padding="16,12,16,24">

            <!-- Header: аватар + имя + статус -->
            <Grid ColumnSpacing="12" RowSpacing="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="72"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Аватар + точка статуса -->
                <AbsoluteLayout HeightRequest="72" WidthRequest="72">

                    <!-- Круглая подложка -->
                    <Frame
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            HasShadow="False"
            Padding="0"
            CornerRadius="36"
            BackgroundColor="#E6E9EE">

                        <!-- Либо фото, либо инициалы -->
                        <Grid>

                            <!-- Фото: видно только если HasAvatar -->
                            <Image
                    Aspect="AspectFill"
                    Source="{Binding AvatarImage}"
                    IsVisible="{Binding HasAvatar}" />

                            <!-- Инициалы: видно когда фото нет -->
                            <Label
                    Text="{Binding Initials}"
                    IsVisible="{Binding HasAvatar, Converter={StaticResource InverseBoolConverter}}"
                    FontSize="24"
                    TextColor="#606874"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                        </Grid>
                    </Frame>

                    <!-- Индикатор статуса с белой обводкой (правый-нижний угол) -->
                    <Grid
    AbsoluteLayout.LayoutBounds="1,1,18,18"
    AbsoluteLayout.LayoutFlags="PositionProportional">
                        <!-- Белое кольцо -->
                        <Frame HasShadow="False"
           Padding="0"
           HeightRequest="18"
           WidthRequest="18"
           CornerRadius="9"
           BackgroundColor="White"/>
                        <!-- Цветная точка -->
                        <Frame HasShadow="False"
           Padding="0"
           HeightRequest="14"
           WidthRequest="14"
           CornerRadius="7"
           BackgroundColor="{Binding PresenceColor}"
           HorizontalOptions="Center"
           VerticalOptions="Center"/>
                    </Grid>
                </AbsoluteLayout>

                <!-- Имя + подпись статуса -->
                <StackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                    <Label Text="{Binding DisplayName}" FontAttributes="Bold" FontSize="18" TextColor="#000"/>
                    <Label Text="{Binding PresenceDisplay}" TextColor="#6F7683" FontSize="14"/>
                </StackLayout>
            </Grid>

            <!-- Custom status under avatar -->
            <Frame
    IsVisible="{Binding HasCustomStatus}"
    Margin="0,6,0,12"
    Padding="10"
    HasShadow="False"
    BackgroundColor="#F3F4F6"
    CornerRadius="12">

                <!-- 👇 тап по чипу открывает редактор -->
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCustomStatusTapped"/>
                </Frame.GestureRecognizers>

                <Grid ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Эмодзи (если нет – просто пусто, остаётся отступ) -->
                    <Label Text="{Binding CustomStatusEmoji}"
               FontSize="18"
               VerticalTextAlignment="Center"/>

                    <!-- Текст -->
                    <Label Grid.Column="1"
               Text="{Binding CustomStatusText}"
               VerticalTextAlignment="Center"
               TextColor="#111827"
               LineBreakMode="TailTruncation"/>

                    <!-- Маленькая кнопка очистки (как у Slack крестик) -->
                    <!-- Новая иконка "×" -->
                    <Frame Grid.Column="2"
       WidthRequest="28" HeightRequest="28"
       Padding="0"
       BackgroundColor="#FFFFFF"
       BorderColor="#D1D5DB"
       CornerRadius="14"
       HasShadow="False"
       IsVisible="{Binding HasCustomStatus}">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ClearCustomStatusCommand}" />
                        </Frame.GestureRecognizers>

                        <!-- сам крестик -->
                        <Label Text="✕"
           FontSize="14"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center"
           AutomationProperties.IsInAccessibleTree="True"
           AutomationProperties.Name="Clear status"/>
                    </Frame>
                </Grid>
            </Frame>

            <!-- БЛОК: быстрые действия -->
            <Frame HasShadow="False" CornerRadius="16" BackgroundColor="White" Padding="0">
                <StackLayout Spacing="0">

                    <!-- Update your status (открывает лист выбора статуса / расширенный статус) -->
                    <Grid Style="{StaticResource RowStyle}">
                        <Image Style="{StaticResource RowIcon}" Source="status.png"/>
                        <Label Grid.Column="1" Style="{StaticResource RowTitle}" Text="Update your status"/>
                        <Image Grid.Column="2" Source="ic_chevron_right.png" HeightRequest="20" WidthRequest="20" />
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ChangeStatusCommand}" />
                        </Grid.GestureRecognizers>
                    </Grid>

                    <Grid Style="{StaticResource RowStyle}">
                        <Image Style="{StaticResource RowIcon}" Source="account.png"/>
                        <Label Grid.Column="1" Style="{StaticResource RowTitle}" Text="Edit profile"/>
                        <Image Grid.Column="2" Source="ic_chevron_right.png" HeightRequest="20" WidthRequest="20" />
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding EditProfileCommand}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- БЛОК: переходы -->
            <Frame HasShadow="False" CornerRadius="16" BackgroundColor="White" Padding="0">
                <StackLayout Spacing="0">

                    <!-- Preferences / Settings -->
                    <Grid Style="{StaticResource RowStyle}">
                        <Image Style="{StaticResource RowIcon}" Source="settings.png"/>
                        <Label Grid.Column="1" Style="{StaticResource RowTitle}" Text="Preferences"/>
                        <Image Grid.Column="2" Source="ic_chevron_right.png" HeightRequest="20" WidthRequest="20" />
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding OpenSettingsCommand}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>
</ContentPage>