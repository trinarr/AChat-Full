<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AChatFull.Views.EditProfilePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Edit Profile">

    <NavigationPage.TitleView>
        <Grid Padding="6,0" HeightRequest="44">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левый back, как на ChatPage -->
            <Grid Grid.Column="0" Padding="4,0" HorizontalOptions="Start" VerticalOptions="Center">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding CloseCommand}"/>
                </Grid.GestureRecognizers>
                <StackLayout Orientation="Horizontal" Spacing="6" VerticalOptions="Center">
                    <Image Source="arrow_back.png" WidthRequest="24" HeightRequest="24" />
                </StackLayout>
            </Grid>

            <!-- Центровой заголовок -->
            <Label Grid.Column="1"
           Text="Edit Profile"
           FontAttributes="Bold"
           FontSize="18"
           VerticalTextAlignment="Center"
           HorizontalTextAlignment="Start"
           TextColor="#fff"/>
        </Grid>
    </NavigationPage.TitleView>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save"
                     Priority="0"
                     Order="Primary"
                     Command="{Binding SaveCommand}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="FieldLabel" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="#374151" />
                <Setter Property="Margin" Value="0,14,0,6" />
            </Style>
            <Style x:Key="Card" TargetType="Frame">
                <Setter Property="Padding" Value="16" />
                <Setter Property="Margin" Value="16,10" />
                <Setter Property="CornerRadius" Value="18" />
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="HasShadow" Value="False" />
            </Style>
            <Style TargetType="Entry">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="TextColor" Value="#111827" />
            </Style>
            <Style TargetType="Editor">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="TextColor" Value="#111827" />
                <Setter Property="AutoSize" Value="TextChanges" />
                <Setter Property="HeightRequest" Value="120" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout Padding="0,12,0,24" Spacing="0" BackgroundColor="#F3F4F6">

            <!-- Avatar card -->
                <StackLayout Spacing="14" HorizontalOptions="Center">
                    <Grid WidthRequest="120" HeightRequest="120">
                        <Frame CornerRadius="60" Padding="0" HasShadow="False" BackgroundColor="#E5E7EB">
                            <Image Source="{Binding AvatarPreview}"
                                   Aspect="AspectFill"
                                   WidthRequest="110" HeightRequest="110" />
                        </Frame>
                    </Grid>

                    <Button Text="Edit Photo"
                            Command="{Binding ChangeAvatarCommand}"
                            HorizontalOptions="Center"
                            CornerRadius="14"
                            BackgroundColor="#EEF2FF"
                            TextColor="#4338CA"
                            Padding="18,10"/>
                </StackLayout>

                <!-- Primary details -->
            <Frame Style="{StaticResource Card}">
                <StackLayout>

                    <Label Text="First name" Style="{StaticResource FieldLabel}" />
                    <Entry Placeholder="e.g., Ada"
       Text="{Binding FirstName}" />

                    <Label Text="Second name" Style="{StaticResource FieldLabel}" />
                    <Entry Placeholder="e.g., Lovelace"
       Text="{Binding SecondName}" />

                    <Label Text="Birthdate" Style="{StaticResource FieldLabel}" />

                    <!-- Когда дата есть -->
                    <Grid ColumnSpacing="10" IsVisible="{Binding HasBirthdate}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <DatePicker Grid.Column="0"
                                    Date="{Binding BirthdateValue}"
                                    Format="MMM d, yyyy" />
                        <Button Grid.Column="1"
                                Text="Clear"
                                BackgroundColor="#E5E7EB"
                                TextColor="#1F2937"
                                CornerRadius="12"
                                Padding="14,8"
                                Command="{Binding ClearBirthdateCommand}" />
                    </Grid>

                    <!-- Когда даты нет -->
                    <Grid ColumnSpacing="10" IsVisible="{Binding HasBirthdate, Converter={StaticResource InverseBoolConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Text="Not set" VerticalTextAlignment="Center" TextColor="#6B7280"/>
                        <Button Grid.Column="1"
                                Text="Add"
                                BackgroundColor="#DCFCE7"
                                TextColor="#166534"
                                CornerRadius="12"
                                Padding="18,8"
                                Command="{Binding EnableBirthdateCommand}" />
                    </Grid>

                    <Label Text="About" Style="{StaticResource FieldLabel}" />
                    <Editor Placeholder="Write a short bio…"
                            Text="{Binding About}" />

                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>
