<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AChatFull.Views.ContactsPage"
             x:Name="ThisPage"
             Padding="0">

    <NavigationPage.TitleView>
        <ContentView Padding="0">
            <Grid Padding="8" ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto">
                <ImageButton Grid.Column="0"
                     Source="arrow_back.png"
                     BackgroundColor="Transparent"
                     HeightRequest="24" WidthRequest="24"
                     Margin="0,0,8,0"
                     IsVisible="{Binding IsSearchMode}"
                     Clicked="OnSearchBackClicked" />

                <Label Grid.Column="1"
             Text="Contacts"
             TextColor="#fff"
             FontAttributes="Bold"
             FontSize="18"
             VerticalTextAlignment="Center"
             HorizontalTextAlignment="Center"
             IsVisible="{Binding IsSearchMode, Converter={StaticResource InverseBoolConverter}}"/>

                <Entry x:Name="SearchEntry"
               Grid.Column="1"
              TextColor="#fff"
               Placeholder="Search"
               Text="{Binding SearchText}"
               ClearButtonVisibility="WhileEditing"
               ReturnType="Search"
               VerticalOptions="Center"
               IsVisible="{Binding IsSearchMode}" />

                <ImageButton Grid.Column="2"
                     Source="search.png"
                     HeightRequest="24" WidthRequest="24"
                     BackgroundColor="Transparent"
                     VerticalOptions="Center"
                     Clicked="OnSearchIconClicked">
                    <ImageButton.Triggers>
                        <DataTrigger TargetType="ImageButton" Binding="{Binding IsSearchMode}" Value="True">
                            <Setter Property="IsVisible" Value="False"/>
                        </DataTrigger>
                    </ImageButton.Triggers>
                </ImageButton>
            </Grid>
        </ContentView>
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <Grid RowDefinitions="*"
          Padding="0"
          Margin="0">
            <CollectionView Grid.Row="0"
                        ItemsSource="{Binding ContactsGroups}"
                        IsGrouped="True"
                        SelectionMode="None"
                        IsVisible="{Binding IsSearchMode, Converter={StaticResource InverseBoolConverter}}">

                <CollectionView.GroupHeaderTemplate>
                    <DataTemplate>
                        <Grid Padding="15,8">
                            <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="Small" TextColor="#666"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.GroupHeaderTemplate>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="15,12" ColumnDefinitions="40,*,Auto">

                            <!-- Аватар + индикатор статуса — ЗАМЕНА на иконку статуса -->
                            <Image Grid.Column="0"
                                   Source="{Binding Presence, Converter={StaticResource PresenceToImageConverter}}"
                                   WidthRequest="30"
                                   HeightRequest="30"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Center"
                                   Aspect="AspectFit" />

                            <!-- Имя и статус -->
                            <StackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                <Label Text="{Binding DisplayName}"
                                   FontAttributes="Bold"
                                   FontSize="18"
                                   TextColor="#000" />
                                <Label Text="{Binding StatusCustom}"
                                   FontSize="Small"
                                   TextColor="#666"
                                   IsVisible="{Binding HasStatus}" />
                            </StackLayout>

                            <!-- Кнопки действий справа (если были) остаются без изменений -->
                            <StackLayout Grid.Column="2"
                                     Orientation="Horizontal"
                                     HorizontalOptions="End"
                                     VerticalOptions="Center"
                                     Spacing="10">
                                <!-- существующие кнопки/иконки -->
                            </StackLayout>

                            <!-- Клик по строке -->
                            <Grid Grid.ColumnSpan="2">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding BindingContext.OpenChatCommand, Source={x:Reference ThisPage}}"
                                                      CommandParameter="{Binding .}"/>
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <CollectionView x:Name="ResultsList"
                        Grid.Row="0"
                        ItemsSource="{Binding SearchGroups}"
                        IsGrouped="True"
                        SelectionMode="None"
                        VerticalOptions="FillAndExpand"
                        IsVisible="{Binding IsSearchMode}">
                <CollectionView.GroupHeaderTemplate>
                    <DataTemplate>
                        <Grid Padding="15,8">
                            <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="Small" TextColor="#666"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.GroupHeaderTemplate>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="15,12" ColumnDefinitions="40,*,Auto">

                            <!-- Аватар + индикатор статуса — ЗАМЕНА на иконку статуса -->
                            <Image Grid.Column="0"
                                   Source="{Binding Presence, Converter={StaticResource PresenceToImageConverter}}"
                                   WidthRequest="30"
                                   HeightRequest="30"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Center"
                                   Aspect="AspectFit" />

                            <!-- Имя и кастомный статус -->
                            <StackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                <Label Text="{Binding DisplayName}"
                                   FontAttributes="Bold"
                                   FontSize="18"
                                   TextColor="#000" />
                                <Label Text="{Binding StatusCustom}"
                                   FontSize="Small"
                                   TextColor="#666"
                                   IsVisible="{Binding HasStatus}" />
                            </StackLayout>

                            <!-- Кнопки справа (если есть) -->
                            <StackLayout Grid.Column="2"
                                     Orientation="Horizontal"
                                     HorizontalOptions="End"
                                     VerticalOptions="Center"
                                     Spacing="10">
                                <!-- существующие кнопки/иконки -->
                            </StackLayout>

                            <!-- Клик по строке -->
                            <Grid Grid.ColumnSpan="2">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding BindingContext.OpenChatCommand, Source={x:Reference ThisPage}}"
                                                      CommandParameter="{Binding .}"/>
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
